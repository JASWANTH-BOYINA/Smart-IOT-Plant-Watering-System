/*Plant watering system with new blynk update
   Home Page
*/

#define BLYNK_TEMPLATE_ID "TMPL3z0NNL8tD"
#define BLYNK_TEMPLATE_NAME "PLANT WATERING SYSTEM"
#define BLYNK_PRINT Serial
#include <ESP8266WiFi.h>
#include <BlynkSimpleEsp8266.h>
int gled=D8;
int rled=D2;
int yled=D0;



char auth[] = "cu6H86leP_ADSP91OtSRafLNepNzv6aG";//Enter your Auth token
char ssid[] = "realme 9 Pro 5G";//Enter your WIFI name
char pass[] = "1234567890";//Enter your WIFI password

BlynkTimer timer;
bool Relay = 0;

//Define component pins
#define sensor A0
#define waterPump D3

void setup() {
  Serial.begin(9600);
  pinMode(waterPump, OUTPUT);
  digitalWrite(waterPump, LOW);

  pinMode(gled,OUTPUT);
  pinMode(yled,OUTPUT);
  pinMode(rled,OUTPUT);
  digitalWrite(gled,HIGH);
  digitalWrite(rled,HIGH);
  digitalWrite(yled,HIGH);
  

  Blynk.begin(auth, ssid, pass, "blynk.cloud", 80);

  
  //Call the function
  timer.setInterval(100L, soilMoistureSensor);
}

//Get the button value
BLYNK_WRITE(V1) {
  Relay = param.asInt();

  if (Relay == 1) {
    digitalWrite(waterPump, HIGH);
    //lcd.setCursor(0, 1);
    //lcd.print("Motor is ON ");
    digitalWrite(yled,LOW);
    delay(2000);
    digitalWrite(yled,HIGH); 
  } else {
    digitalWrite(waterPump, LOW);
    //lcd.setCursor(0, 1);
    //lcd.print("Motor is OFF");
  }
}

//Get the soil moisture values
void soilMoistureSensor() {
  int value = analogRead(sensor);
  value = map(value, 0, 1024, 0, 100);
  value = (value - 100) * -1;//   

  Blynk.virtualWrite(V0, value);
  //lcd.setCursor(0, 0);
  //lcd.print("Moisture :");
  //lcd.print(value);
  //lcd.print(" ");
  
  if(value<200){
    digitalWrite(gled,HIGH);
    digitalWrite(rled,LOW);
     digitalWrite(waterPump, HIGH);
    //lcd.setCursor(0, 1);
    //lcd.print("Motor is ON ");
    digitalWrite(yled,LOW);
    delay(2000);
    digitalWrite(yled,HIGH);
  }  
  else if(value>80){
    
    digitalWrite(rled,HIGH);
    digitalWrite(gled,LOW);
    digitalWrite(waterPump, LOW);
    
    
    
  }

}

void loop() {
  Blynk.run();//Run the Blynk library
  timer.run();//Run the Blynk timer
}
